extends layout

block content
	h2.currentWeek Week: #{ week }

	div.schedule
		section.days
			div.shift
				h1 Monday 
				ul
					li.morning 
					li.evening #{ mondayAssigned }
					li.night 
		section.days
			div.shift
				h1 Tuesday 
				ul
					li.morning Alpha
					li.evening #{ tuesdayAssigned }
					li.night Charles
